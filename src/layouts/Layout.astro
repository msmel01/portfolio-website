---
import Header from '../components/Header.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header />
		<div class="container">
			<slot />
		</div>
	</body>
</html>

<style>
	html {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
	}

	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		overflow-x: hidden;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
		width: 100%;
		box-sizing: border-box;
		overflow-x: hidden;
	}

	@media screen and (max-width: 768px) {
		.container {
			padding: 0 1rem;
		}

		/* Prevent body scroll when mobile menu is open */
		body.menu-open {
			overflow: hidden;
			position: fixed;
			width: 100%;
			height: 100%;
		}
	}
</style>
